<UserControl x:Class="SciFiUI.Controls.PowerSystemPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SciFiUI.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MinWidth="180" MinHeight="150">
    <Border x:Name="RootBorder"
            Padding="8"
            CornerRadius="4"
            Background="#080D16"
            BorderBrush="#223344"
            BorderThickness="1">

        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Progress Bars"
                          IsCheckable="True"
                          IsChecked="True"
                          Click="PowerMode_Progress_Click"/>
                <MenuItem Header="Ring Gauges"
                          IsCheckable="True"
                          Click="PowerMode_Ring_Click"/>
            </ContextMenu>
        </Border.ContextMenu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 제목 -->
            <TextBlock Grid.Row="0"
                       Text="POWER SYSTEM"
                       Foreground="#E0F4FF"
                       FontSize="11"
                       FontWeight="Bold"
                       Margin="0,0,0,4"/>

            <!-- ProgressBar 버전 -->
            <StackPanel x:Name="PowerSystemProgressPanel"
                        Grid.Row="1">

                <TextBlock Text="CORE 0"
                           Foreground="#8FA7C6"
                           FontSize="9"/>
                <ProgressBar x:Name="Core0Bar"
                             Value="0"
                             Maximum="100"
                             Height="6"
                             Margin="0,0,0,4"/>

                <TextBlock Text="CORE 1"
                           Foreground="#8FA7C6"
                           FontSize="9"/>
                <ProgressBar x:Name="Core1Bar"
                             Value="0"
                             Maximum="100"
                             Height="6"
                             Margin="0,0,0,4"/>

                <TextBlock Text="RAM"
                           Foreground="#8FA7C6"
                           FontSize="9"/>
                <ProgressBar x:Name="RamBar"
                             Value="0"
                             Maximum="100"
                             Height="6"
                             Margin="0,0,0,4"/>

                <TextBlock Text="GPU"
                           Foreground="#8FA7C6"
                           FontSize="9"/>
                <ProgressBar x:Name="GpuBar"
                             Value="0"
                             Maximum="100"
                             Height="6"/>
            </StackPanel>

            <!-- Ring 게이지 버전 -->
            <UniformGrid x:Name="PowerSystemRingPanel"
                         Grid.Row="1"
                         Columns="2"
                         Margin="0,4,0,0"
                         Visibility="Collapsed">

                <!-- CORE 0 -->
                <Grid>
                    <Canvas x:Name="RingCore0"
                            Width="70" Height="70"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock x:Name="RingCore0Value"
                                   Text="0%"
                                   Foreground="#E0F4FF"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="CORE 0"
                                   Foreground="#8FA7C6"
                                   FontSize="9"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- CORE 1 -->
                <Grid>
                    <Canvas x:Name="RingCore1"
                            Width="70" Height="70"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock x:Name="RingCore1Value"
                                   Text="0%"
                                   Foreground="#E0F4FF"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="CORE 1"
                                   Foreground="#8FA7C6"
                                   FontSize="9"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- RAM -->
                <Grid>
                    <Canvas x:Name="RingRam"
                            Width="70" Height="70"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock x:Name="RingRamValue"
                                   Text="0%"
                                   Foreground="#E0F4FF"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="RAM"
                                   Foreground="#8FA7C6"
                                   FontSize="9"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- GPU -->
                <Grid>
                    <Canvas x:Name="RingGpu"
                            Width="70" Height="70"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock x:Name="RingGpuValue"
                                   Text="0%"
                                   Foreground="#E0F4FF"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="GPU"
                                   Foreground="#8FA7C6"
                                   FontSize="9"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </UniformGrid>
        </Grid>
    </Border>
</UserControl>