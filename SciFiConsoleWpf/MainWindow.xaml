<Window x:Class="SciFiConsoleWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SciFiConsoleWpf"
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="SCIFICONSOLE" Height="800" Width="1600" WindowState="Maximized" WindowStyle="SingleBorderWindow" ResizeMode="NoResize" Background="#050A12">
    <Window.Resources>
        <!-- 색상 팔레트 -->
        <SolidColorBrush x:Key="BgMain" Color="#050A12" />
        <SolidColorBrush x:Key="PanelBorder" Color="#00E4FF" />
        <SolidColorBrush x:Key="TextPrimary" Color="#C0E8FF" />
        <SolidColorBrush x:Key="TextSecondary" Color="#7689A0" />
        <SolidColorBrush x:Key="AccentWarn" Color="#FF4D4D" />

        <!-- 패널 공통 스타일 -->
        <Style x:Key="ModulePanel" TargetType="Border">
            <Setter Property="Background" Value="#111826"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00E4FF"
                                      BlurRadius="15"
                                      ShadowDepth="0"
                                      Opacity="0.35"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 작은 라벨 텍스트 -->
        <Style x:Key="TinyLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
        <!-- 기존 브러시/스타일 밑에 추가 -->
        <Storyboard x:Key="UiAnimations">
            <!-- 레이더 링 움직임 -->
            <DoubleAnimation
                Storyboard.TargetName="RadarCircle1"
                Storyboard.TargetProperty="StrokeDashOffset"
                From="0" To="15"
                Duration="0:0:1"
                RepeatBehavior="Forever"/>

            <DoubleAnimation
                Storyboard.TargetName="RadarCircle2"
                Storyboard.TargetProperty="StrokeDashOffset"
                From="0" To="20"
                Duration="0:0:1.6"
                RepeatBehavior="Forever"/>

            <DoubleAnimation
                Storyboard.TargetName="RadarCircle3"
                Storyboard.TargetProperty="StrokeDashOffset"
                From="0" To="30"
                Duration="0:0:1"
                RepeatBehavior="Forever"/>

            <!-- FOV 스캐닝 애니메이션 -->
            <DoubleAnimation
                Storyboard.TargetName="FovRotateAnim"
                Storyboard.TargetProperty="Angle"
                From="-20" To="20"
                Duration="0:0:1.8"
                AutoReverse="True"
                RepeatBehavior="Forever"/>

            <!-- 타겟 흔들림 애니메이션 (LayerAnimation 전용) -->
            <DoubleAnimation
                Storyboard.TargetName="TargetAnimTransform"
                Storyboard.TargetProperty="X"
                From="80" To="100"
                Duration="0:0:2.5"
                AutoReverse="True"
                RepeatBehavior="Forever"/>

            <DoubleAnimation
                Storyboard.TargetName="TargetAnimTransform"
                Storyboard.TargetProperty="Y"
                From="-60" To="-30"
                Duration="0:0:2"
                AutoReverse="True"
                RepeatBehavior="Forever"/>
        </Storyboard>
        <Style x:Key="SciFiButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#111826"/>
            <Setter Property="BorderBrush" Value="#00E4FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3">
                            <Grid>
                                <!-- 안쪽 라인 -->
                                <Border BorderBrush="#182233"
                                BorderThickness="1"
                                Margin="1"/>
                                <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="6,2"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- 마우스 오버 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#182133"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#33E4FF"/>
                            </Trigger>
                            <!-- 눌렀을 때 -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0A141F"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFCC33"/>
                            </Trigger>
                            <!-- 비활성화 -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="BorderBrush" Value="#334455"/>
                                <Setter Property="Foreground" Value="#556575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="{StaticResource BgMain}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- Top bar -->
            <RowDefinition Height="*"/>
            <!-- Main area -->
            <RowDefinition Height="46"/>
            <!-- Bottom bar -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <!-- Left panel -->
            <ColumnDefinition Width="5*"/>
            <!-- Center map -->
            <ColumnDefinition Width="3*"/>
            <!-- Right panel -->
        </Grid.ColumnDefinitions>

        <!-- ========== 상단 상태바 ========== -->
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="8,4,8,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 좌측: 시스템 이름 -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="OPLINK CONTROL / SECTOR-07"
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="14"
                           FontWeight="Bold"/>
                <TextBlock Text="   |   STATUS: ONLINE"
                           Foreground="{StaticResource TextSecondary}"
                           FontSize="11"
                           Margin="8,2,0,0"/>
            </StackPanel>

            <!-- 우측: 시간 / 경고 아이콘 자리 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="WARN"
                           Foreground="{StaticResource AccentWarn}"
                           FontSize="11"
                           Margin="0,0,10,0"/>
                <Rectangle Width="16" Height="16" Stroke="#00E4FF" StrokeThickness="1" Margin="0,0,6,0"/>
                <Rectangle Width="16" Height="16" Stroke="#00E4FF" StrokeThickness="1" Margin="0,0,10,0"/>

                <TextBlock x:Name="txtClock"
                           Text="21:32:05"
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="13"
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>

        <!-- ========== 좌측 패널 ========== -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="8,0,4,0">
            <!-- 모듈 1: 시스템 게이지 -->
            <Border Style="{StaticResource ModulePanel}" Height="170">
                <StackPanel>
                    <TextBlock Text="POWER SYSTEM" Foreground="{StaticResource TextPrimary}"
                               FontSize="11" FontWeight="Bold" Margin="0,0,0,4"/>
                    <TextBlock Style="{StaticResource TinyLabel}" Text="CORE LOAD" />
                    <ProgressBar Value="72" Maximum="100" Height="6" Margin="0,0,0,4"/>
                    <TextBlock Style="{StaticResource TinyLabel}" Text="TEMP" />
                    <ProgressBar Value="48" Maximum="100" Height="6"/>
                </StackPanel>
            </Border>

            <!-- 모듈 2: 작은 그래프 자리 (비어있어도 됨) -->
            <Border Style="{StaticResource ModulePanel}" Height="170">
                <Grid>
                    <TextBlock Text="SIGNAL ANALYTICS"
                               Foreground="{StaticResource TextPrimary}"
                               FontSize="11" FontWeight="Bold"
                               HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <!-- 나중에 Polyline 그래프 or 라이브 데이터 바인딩 -->
                </Grid>
            </Border>

            <!-- 모듈 3: 로그 창 -->
            <Border Style="{StaticResource ModulePanel}" VerticalAlignment="Stretch">
                <StackPanel>
                    <TextBlock Text="EVENT LOG"
                   Foreground="{StaticResource TextPrimary}"
                   FontSize="11" FontWeight="Bold" Margin="0,0,0,4"/>
                    <ListBox x:Name="EventLogList"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="{StaticResource TextSecondary}"
                 FontSize="10">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- ========== 중앙 패널 (지도/메인 화면) ========== -->
        <Border Grid.Row="1" Grid.Column="1" Margin="4,0,4,0"
                Style="{StaticResource ModulePanel}">
            <Grid x:Name="CentralPanelRoot">
                <!-- ========== Layer 0 : Default SF Animation Screen ========== -->
                <Grid x:Name="LayerAnimation">
                    <!-- 레이더 중심점 -->
                    <Ellipse Width="10" Height="10"
                         Fill="#00E4FF"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>

                    <!-- 레이더 원 1 -->
                    <Ellipse Width="120" Height="120"
                         Stroke="#00E4FF" StrokeThickness="1"
                         StrokeDashArray="4 2"
                         x:Name="RadarCircle1"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>

                    <!-- 레이더 원 2 -->
                    <Ellipse Width="180" Height="180"
                         Stroke="#33465C" StrokeThickness="1"
                         StrokeDashArray="4 2"
                         x:Name="RadarCircle2"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>

                    <!-- 레이더 원 3 -->
                    <Ellipse Width="260" Height="260"
                         Stroke="#00E4FF" StrokeThickness="1"
                         StrokeDashArray="6 3"
                         x:Name="RadarCircle3"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>

                    <!-- FOV 삼각형 -->
                    <Polygon x:Name="FovConeAnim"
                         Fill="#3318E4FF"
                         Stroke="#18E4FF"
                         StrokeThickness="1"
                         Points="0,60  40,0  80,60"
                         RenderTransformOrigin="0.5,0.5"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">
                        <Polygon.RenderTransform>
                            <RotateTransform x:Name="FovRotateAnim" Angle="-20"/>
                        </Polygon.RenderTransform>
                     </Polygon>

                     <!-- 타겟 점(기본 HUD 애니메이션용) -->
                     <Ellipse Width="12" Height="12"
                         Fill="#FF4D4D"
                         Stroke="White" StrokeThickness="1"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">
                        <Ellipse.RenderTransform>
                            <TranslateTransform x:Name="TargetAnimTransform"
                                X="80" Y="-60"/>
                        </Ellipse.RenderTransform>
                     </Ellipse>

                     <!-- 텍스트 -->
                     <TextBlock Text="SYSTEM READY"
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="14" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,40"/>
                </Grid>


                <!-- ========== Layer 1 : MAP ========== -->
                <Grid x:Name="LayerMap" Visibility="Collapsed">
                    <gmap:GMapControl x:Name="MapControl"
                              MinZoom="3"
                              MaxZoom="19"
                              Zoom="12"
                              MouseWheelZoomEnabled="True"
                              MouseWheelZoomType="MousePositionWithoutCenter"
                              CanDragMap="True" />

                    <Canvas x:Name="HudOverlay" IsHitTestVisible="False"/>


                </Grid>


                <!-- ========== Layer 2 : VIDEO ========== -->
                <Grid x:Name="LayerVideo" Visibility="Collapsed">
                    <Border BorderBrush="#00E4FF" BorderThickness="1">
                        <!-- 나중에 GStreamer, VLCSharp, FFmpeg 넣을 자리 -->
                        <TextBlock Text="VIDEO STREAM HERE"
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Border>
                </Grid>


                <!-- ========== Overlay Buttons (Always shown) ========== -->
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,0,0,0">
                    <Button Content="ANIMATION" Click="btnShowAnim_Click"
                    Style="{StaticResource SciFiButton}"
                    Width="120"/>
                    <Button Content="MAP" Click="btnShowMap_Click"
                    Style="{StaticResource SciFiButton}"
                    Width="80"/>
                    <Button Content="VIDEO" Click="btnShowVideo_Click"
                    Style="{StaticResource SciFiButton}"
                    Width="80"/>
                </StackPanel>


                <!-- 좌상단 제목 -->
                <TextBlock Text="TERRAIN / SECTOR-07"
                   Foreground="{StaticResource TextPrimary}"
                   FontSize="11"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="6"/>

                <!-- 우하단 좌표 표시 자리 -->
                <TextBlock x:Name="txtTargetInfo"
                   Text="TGT: --- , ---"
                   Foreground="{StaticResource TextSecondary}"
                   FontSize="10"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Margin="0,0,6,4"/>
                
            </Grid>
        </Border>

        <!-- ========== 우측 패널 ========== -->
        <StackPanel Grid.Row="1" Grid.Column="2" Margin="4,0,8,0">
            <!-- 모듈 1: UAV 상태 -->
            <Border Style="{StaticResource ModulePanel}" Height="170">
                <StackPanel>
                    <TextBlock Text="UAV STATUS"
                               Foreground="{StaticResource TextPrimary}"
                               FontSize="11" FontWeight="Bold"/>
                    <TextBlock Style="{StaticResource TinyLabel}" Text="UAV #01  READY" />
                    <TextBlock Style="{StaticResource TinyLabel}" Text="UAV #02  STANDBY" />
                    <TextBlock Style="{StaticResource TinyLabel}" Text="UAV #03  ACTIVE" />
                </StackPanel>
            </Border>

            <!-- 모듈 2: 카메라 / 짐벌 -->
            <Border Style="{StaticResource ModulePanel}" Height="170">
                <StackPanel>
                    <TextBlock Text="EO/IR GIMBAL"
                               Foreground="{StaticResource TextPrimary}"
                               FontSize="11" FontWeight="Bold"/>
                    <TextBlock Style="{StaticResource TinyLabel}" Text="PAN : +002.3°" />
                    <TextBlock Style="{StaticResource TinyLabel}" Text="TILT: -034.8°" />
                    <TextBlock Style="{StaticResource TinyLabel}" Text="FOV : 12.4°" />
                </StackPanel>
            </Border>

            <!-- 모듈 3: 기타 -->
            <Border Style="{StaticResource ModulePanel}" VerticalAlignment="Stretch">
                <TextBlock Text="RESERVED PANEL"
                           Foreground="{StaticResource TextSecondary}"
                           FontSize="10"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            <!-- ⭐ 새로 추가: COMMAND 버튼 패널 -->
            <Border Style="{StaticResource ModulePanel}" Height="60">
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Button x:Name="btnArm" Content="ARM"
                    Width="70"
                    Style="{StaticResource SciFiButton}"
                    Click="btnArm_Click"/>
                    <Button x:Name="btnDisarm" Content="DISARM"
                    Width="80"
                    Style="{StaticResource SciFiButton}"
                    Click="btnDisarm_Click"/>
                    <Button x:Name="btnTrack" Content="TRACK"
                    Width="80"
                    Style="{StaticResource SciFiButton}"
                    Click="btnTrack_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- ========== 하단 바 ========== -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Margin="8,4,8,8"
                Background="#0C121E" BorderBrush="#1D2535"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- 좌측: 텔레메트리 -->
                <StackPanel Orientation="Horizontal" Margin="8,4,0,0">
                    <TextBlock x:Name="txtAlt" Style="{StaticResource TinyLabel}" Text="ALT: 0123m" />
                    <TextBlock x:Name="txtSpd" Style="{StaticResource TinyLabel}" Text="   SPD: 045kt" />
                    <TextBlock x:Name="txtHdg" Style="{StaticResource TinyLabel}" Text="   HDG: 273°" />
                </StackPanel>

                <!-- 중앙: 진행 상태 바 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource TinyLabel}" Text="MISSION 03   PROGRESS" />
                    <ProgressBar x:Name="MissionProgress" Value="38" Maximum="100" Height="8" Width="260" Margin="6,0,0,0"/>
                </StackPanel>

                <!-- 우측: 연결 정보 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal"
                            HorizontalAlignment="Right" Margin="0,4,8,0">
                    <TextBlock Style="{StaticResource TinyLabel}" Text="LINK: UDP 14550 " />
                    <Ellipse x:Name="LinkLed" Width="8" Height="8" Fill="#31FF72" Margin="4,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

